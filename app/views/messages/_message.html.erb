<div class="row message mt-1">
  <% if message.user.online %>
    <div class="col-2 font-weight-bold text-success">
      <%= message.user.nickname %>
    </div>
  <% else %>
    <div class="col-2 font-weight-bold text-danger">
      <%= message.user.nickname %>
    </div>
  <% end %>

  <div class="col-10">
    <div class="float-right small badge badge-light">
      <%= message.created_at.strftime("%H:%M") %>
    </div>

    <div><%= message.body %></div>
  </div>
</div>
